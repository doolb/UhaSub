<UserControl x:Class="UhaSub.setting.about"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:UhaSub.Properties"
        Height="300" Width="540">
    <Grid>
        <TextBlock Text="{x:Static p:Resources.about}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{Binding Source={x:Static p:Settings.Default}, Path=text}"
                   FontSize="18"/>
        
        
        <TextBlock Text="{Binding Source={x:Static p:Settings.Default}, Path=version}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Foreground="{Binding Source={x:Static p:Settings.Default}, Path=text}"
                   Margin="18"/>
    </Grid>
</UserControl>
