<Window x:Class="UhaSub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UhaSub"
        Title="MainWindow" Height="350" Width="725"
        Background="#333333"
        WindowState="Maximized" KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            
            <local:Video x:Name="video" DockPanel.Dock="Top"/>
            <local:Audio    x:Name="audio"/>
        </StackPanel>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- buttons are all here-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="" ToolTip="Open File" Click="OnOpenFile"/>
                <Button Content="" ToolTip="New Sub"/>
            </StackPanel>
            
            <local:Ass x:Name="ass" DockPanel.Dock="Right"
                       Grid.Row="1"/>
        
            <StackPanel Grid.Row="2">
                <TextBlock Name="psText" Foreground="White"/>
                <Slider Name="time" Value="{Binding Source=video,Path=Position}"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
