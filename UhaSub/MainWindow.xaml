<Window x:Class="UhaSub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UhaSub"
        xmlns:p="clr-namespace:UhaSub.Properties"
        Title="{x:Static p:Resources.Title}" 
        Height="350" Width="725"
        Background="{Binding Source={x:Static p:Settings.Default}, Path=background}"
        Foreground="{Binding Source={x:Static p:Settings.Default}, Path=foreground}"
        WindowState="Maximized" 
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
    
        <!-- bind app setting 
            refer:http://stackoverflow.com/questions/154533/best-way-to-bind-wpf-properties-to-applicationsettings-in-c
    -->

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:Video    x:Name="video" 
                        Grid.Column="0" Grid.Row="0"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"/>


        
        <Grid Grid.Column="1">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- buttons are all here-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="" 
                        ToolTip="{x:Static p:Resources.OpenFile}" 
                        Click="OnOpenFile"/>
                <Button Content="" 
                        ToolTip="{x:Static p:Resources.OpenSub}" 
                        Click="OnOpenSub"/>
            </StackPanel>
            
            <local:Sub      x:Name="sub" DockPanel.Dock="Right"
                            Grid.Row="1"
                            Focusable="False"/>
            <local:Audio    x:Name="audio"
                            Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>
